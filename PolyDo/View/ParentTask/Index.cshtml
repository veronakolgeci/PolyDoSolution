@model IEnumerable<@model PolyDo.Application.DTOs.ParentTaskDto>

@{
    ViewData["Title"] = "Tasks";
}

<h2>Tasks</h2>

<p>
    <a href="/Tasks/Create">Create New Task</a>
</p>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Due Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model) {
            <tr>
                <td>@task.Title</td>
                <td>@task.Description</td>
                <td>@task.DueDate</td>
                <td>
                    <a href="/Tasks/Details/@task.Id">Details</a> |
                    <a href="/Tasks/Edit/@task.Id">Edit</a> |
                    <a href="/Tasks/Delete/@task.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
