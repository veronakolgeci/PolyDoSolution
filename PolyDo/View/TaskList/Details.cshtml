@model PolyDo.Application.DTOs.TaskListDto

<h2>List Details</h2>

<div>
    <h4>@Model.Name</h4>
    <p>@Model.Description</p>
</div>

<h3>Tasks</h3>
<p>
    <a href="/Tasks/Create?listId=@Model.Id">Add New Task</a>
</p>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Due Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model.Tasks) {
            <tr>
                <td>@task.Title</td>
                <td>@task.Description</td>
                <td>@task.DueDate</td>
                <td>
                    <a href="/Tasks/Details/@task.Id">Details</a> |
                    <a href="/Tasks/Edit/@task.Id">Edit</a> |
                    <a href="/Tasks/Delete/@task.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
